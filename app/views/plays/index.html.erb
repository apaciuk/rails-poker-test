


<div class="row">
  <div class="col-sm-6">
    <h1>Poker Hands</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_play_path, class: 'btn btn-primary' do %>
    Play Poker
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Status</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @plays.each do |play| %>
        <%= content_tag :tr, id: dom_id(play), class: dom_class(play) do %>
          

                      <td><%= play.status %></td>
          
          
            <td><%= link_to 'Show', play %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
