<%= form_with(model: play) do |form| %>
  <% if play.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(play.errors.count, "error") %> prohibited this play from being saved:</h2>

      <ul>
      <% play.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :status, class: 'form-label' %>
      <%= form.text_field :status, class: 'form-control', placeholder: 'Stand or Draw?' %>
    </div>

  <div class="mb-3">
    <% if play.persisted? %>
      <div class="float-end">
        <%= link_to 'Destroy', play, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if play.persisted? %>
      <%= link_to "Cancel", play, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", plays_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
